<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DailyPlant.Library.ViewModels"
             x:Class="DailyPlant.Views.PlantDetailView">
    
    <UserControl.Resources>
        <LinearGradientBrush x:Key="GlassEffect" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#20FFFFFF"/>
            <GradientStop Offset="1" Color="#10FFFFFF"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#4CAF50"/>
            <GradientStop Offset="1" Color="#45a049"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="TextBlock.plant-title">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style Selector="TextBlock.plant-subtitle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style Selector="TextBlock.plant-description">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="1.6"/>
        </Style>
        
        <Style Selector="Border.glass-card">
            <Setter Property="Background" Value="{DynamicResource GlassEffect}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
        </Style>
        
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style Selector="Button.primary-button:pointerover">
            <Setter Property="Background" Value="#3D8B40"/>
        </Style>
        
        <Style Selector="ProgressBar.confidence-bar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#404040"/>
        </Style>
    </UserControl.Styles>

